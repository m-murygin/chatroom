doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title= title
    link(rel='stylesheet', href='/components/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/style.css')
  body
    block global_values

    nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Chat room
        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav
            li(class=currentTab === 'home' ? 'active' : '')
              a(href='/') Home
            li(class=currentTab === 'admin' ? 'active' : '')
              a(href='/admin/rooms') Admin
          ul.nav.navbar-nav.navbar-right
            if user
              li
                a(href='#')
                  span.glyphicon.glyphicon-user.labeled-icon
                  = user ? user.name : 'unknown'
              li
                a(href='/logout')
                  span.glyphicon.glyphicon-log-out.labeled-icon
                  | Logout
            else
              li
                a(href='/login')
                  span.glyphicon.glyphicon-log-in.labeled-icon
                  | Login

    .container
      .main-content
        block content

  script(src='/components/jquery/dist/jquery.min.js')
  script(src='/components/bootstrap/dist/js/bootstrap.min.js')
  script(src='/js/helpers.js')
  block scripts
