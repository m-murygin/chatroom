{
    "extends": "airbnb-base",
    "plugins": [
        "import",
        "node"
    ],
    "env": {
        "node": true,
        "mocha": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "script",
        "ecmaFeatures": {
            "modules": false,
            "generators": false
        }
    },
    "rules": {
        "strict": ["error", "global"],
        "indent": ["error", 2, {
            "SwitchCase": 1,
            "VariableDeclarator": 1,
            "outerIIFEBody": 1,
            "MemberExpression": 1,
            "FunctionDeclaration": {
              "parameters": 1,
              "body": 1
            },
            "FunctionExpression": {
              "parameters": 1,
              "body": 1
            },
            "CallExpression": {
                "arguments": 1
            }
        }],
        "max-len": ["error", 95, 2, {
          "ignoreUrls": true,
          "ignoreComments": false,
          "ignoreRegExpLiterals": true,
          "ignoreStrings": false,
          "ignoreTemplateLiterals": true
        }],
        "no-console": "off",

        "prefer-destructuring": "off",
        "prefer-rest-params": "off",
        "prefer-spread": "off",
        "rest-spread-spacing": "off",
        "symbol-description": "off",
        "sort-imports": "off",
        "yield-star-spacing": "off",

        "node/exports-style": ["error", "module.exports"],
        "node/no-deprecated-api": "error",
        "node/no-missing-require": "error",
        "node/no-unsupported-features": "error"
    }
}